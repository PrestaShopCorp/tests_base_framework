{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es6",
    "module": "commonjs",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": false,
    "strict": true,
    "strictFunctionTypes": true,
    "declaration": true,
    "declarationDir": "./types",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "~/*": ["./*"],
      "*": ["*", "node_modules/playwright/types/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/playwright/types"
    ],
  },
  "include": [
    "src/**/*.ts",
    "examples/**/*.ts"
  ]
}
