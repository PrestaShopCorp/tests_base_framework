{
  "include": ["src/helpers/**/*.ts", "src/utils/pages/**/*.ts"],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": false,
    "strict": true,
    "strictFunctionTypes": true,
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "./",
    "paths": {
      "@root/*": ["./*"],
      "@helpers/*": ["src/helpers/*"],
      "@examples/*": ["examples/*"],
      "@utils/*": ["src/utils/*"],
      "@pages/*": ["src/utils/pages/*"],
      "*": ["*", "node_modules/playwright/types/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/playwright/types"
    ]
  }
}