{
  "include": [
    "src/index.ts",
    "src/helpers/**/*.ts",
    "src/utils/pages/**/*.ts",
    "src/utils/mocha/**/*.ts"
  ],
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": false,
    "strict": true,
    "strictFunctionTypes": true,
    "declaration": true,
    "declarationDir": "./types",
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "~/*": ["./*"],
      "*": ["*", "node_modules/playwright/types/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/playwright/types"
    ]
  }
}