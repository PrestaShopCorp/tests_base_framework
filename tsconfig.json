{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": false,
    "strict": true,
    "strictFunctionTypes": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "./",
    "paths": {
      "@root/*": ["./*"],
      "@helpers/*": ["helpers/*"],
      "@examples/*": ["examples/*"],
      "@utils/*": ["utils/*"],
      "@mochaExample/*": ["example/mocha/*"],
      "*": ["*", "node_modules/playwright/types/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/playwright/types",
    ]
  }
}