{
  "name": "prestashop_corp_tests_base_framework",
  "version": "2.0.0",
  "description": "Base framework for new tests project",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test:mocha:desktop": "mocha --recursive --file src/utils/mocha/setup.ts examples/mocha/scenarios/desktop/**/*.ts",
    "test:mocha:mobile": "mocha --recursive --file src/utils/mocha/setup.ts examples/mocha/scenarios/mobile/**/*.ts",
    "test:cucumber:desktop": "cucumber-js examples/cucumber/features/* --require examples/cucumber/types/* --require src/utils/cucumber/setup.ts --require examples/cucumber/step-definitions/desktop/* --require-module ts-node/register",
    "test:cucumber:mobile": "cucumber-js examples/cucumber/features/* --require examples/cucumber/types/* --require src/utils/cucumber/setup.ts --require examples/cucumber/step-definitions/mobile/* --require-module ts-node/register"
  },
  "publishConfig": {
    "access": "public"
  },
  "_moduleAliases": {
    "@root": ".",
    "@helpers": "src/helpers",
    "@examples": "examples",
    "@utils": "src/utils",
    "@pages": "src/utils/pages"
  },
  "keywords": [
    "prestashop",
    "tests",
    "ui-tests",
    "tests-base-framework"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@cucumber/cucumber": "^7.1.0",
    "chai": "^4.3.4",
    "mocha": "^8.3.2",
    "mochawesome": "^6.2.2",
    "module-alias": "^2.2.2",
    "mysql2": "^2.3.0",
    "playwright": "1.13.1",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/cucumber": "^7.0.0",
    "@types/mocha": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0"
  }
}
